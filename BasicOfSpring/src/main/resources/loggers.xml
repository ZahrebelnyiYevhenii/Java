<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="consoleLogger" class="logger.ConsoleEventLogger"/>
    <bean id="fileLogger" class="logger.FileEventLogger" init-method="init" c:filename="src/main/resources/logger.txt"/>
    <bean id="cacheLogger" class="logger.CacheFileEventLogger" parent="fileLogger" destroy-method="destroy">
        <constructor-arg value="10"/>
        <constructor-arg>
            <bean class="java.util.LinkedList"/>
        </constructor-arg>
    </bean>
    <bean id="combinedLogger" class="logger.CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="consoleLogger"/>
                <ref bean="fileLogger"/>
            </list>
        </constructor-arg>
    </bean>

</beans>