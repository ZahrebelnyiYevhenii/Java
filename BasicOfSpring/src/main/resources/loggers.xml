<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="eventLogger" class="logger.ConsoleEventLogger"/>
    <bean id="fileEventLogger" class="logger.FileEventLogger" init-method="init">
        <constructor-arg value="src/main/resources/logger.txt"/>
    </bean>
    <bean id="cacheEventLogger" class="logger.CacheFileEventLogger" parent="fileEventLogger" destroy-method="destroy">
        <constructor-arg value="10"/>
        <constructor-arg>
            <bean class="java.util.LinkedList"/>
        </constructor-arg>
    </bean>

</beans>