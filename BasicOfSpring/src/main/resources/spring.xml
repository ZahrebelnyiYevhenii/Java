<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="client" class="entity.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John Smith"/>
    </bean>
    <bean id="event" class="entity.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>
    <bean id="eventLogger" class="logger.ConsoleEventLogger"/>
    <bean id="fileEventLogger" class="logger.FileEventLogger" init-method="init">
        <constructor-arg value="src/main/resources/logger.txt"/>
    </bean>
    <bean id="cacheEventLogger" class="logger.CacheFileEventLogger" destroy-method="destroy">
        <constructor-arg value="10"/>
        <constructor-arg>
            <bean class="java.util.LinkedList"/>
        </constructor-arg>
    </bean>
    <bean id="app" class="startProject.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheEventLogger"/>
    </bean>

</beans>